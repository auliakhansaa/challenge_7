<div class="d-flex justify-content-between align-items-center">
    <h3 class="m-0"><%= pageTitle %></h3>
    <a class="btn btn-primary" href="/userGameHistories/create" role="button">
      <i class="bi-plus-lg"></i> Buat Baru
    </a>
  </div>
  
  <div class="table-responsive mt-3">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Username</th>
          <th scope="col">ID_game</th>
          <th scope="col">Score</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% userGameHistories.forEach((userGameHistory, index) => { %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= userGameHistory.id_user_game_h.username %></td>
            <td><%= userGameHistory.id_game %></td>
            <td><%= userGameHistory.score %></td>
            <td>
              <div class="d-flex gap-2 text-nowrap">
                <a class="btn btn-primary btn-sm" href="/userGameHistories/<%= userGameHistory.id %>" role="button">
                  <i class="bi-pencil-fill"></i> Detail
                </a>
  
                <a class="btn btn-primary btn-sm" href="/userGameHistories/<%= userGameHistory.id %>/edit" role="button">
                  <i class="bi-pencil-fill"></i> Edit
                </a>
  
                <form method="post" action="/userGameHistories/<%= userGameHistory.id %>?_method=DELETE">
                  <button class="btn btn-danger btn-sm" type="submit">
                    <i class="bi-trash-fill"></i> Hapus
                  </button>
                </form>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>